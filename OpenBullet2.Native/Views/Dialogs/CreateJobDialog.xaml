<Page x:Class="OpenBullet2.Native.Views.Dialogs.CreateJobDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenBullet2.Native.Views.Dialogs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateJobDialog">

    <Border Padding="20">
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center">
            <Button Click="CreateMultiRunJob" Margin="0 0 0 5" 
                        Style="{StaticResource StyledPrimaryButton}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="5 0">Multi Run</TextBlock>
                </StackPanel>
            </Button>

            <Button Click="CreateProxyCheckJob"
                        Style="{StaticResource StyledPrimaryButton}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="5 0">Proxy Check</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</Page>
